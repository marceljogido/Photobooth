# ===========================================
# DIGIOH PHOTOBOOTH ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3001
# NODE_ENV=production

# ===========================================
# FTP SERVER CONFIGURATION
# ===========================================
STORAGE_PROVIDER=ftp
FTP_HOST=ftp.example.com
FTP_USER=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_PORT=21
FTP_REMOTE_PATH=/path/to/remote/folder/
FTP_DISPLAY_URL=https://your-public-url/

# ===========================================
# LIGHTX STUDIO API CONFIGURATION
# ===========================================
# API Key untuk LightX Studio AI processing
# LIGHTX_API_KEY=your_lightx_api_key_here

# ===========================================
# GOOGLE GEMINI AI CONFIGURATION
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# OPTIONAL: NEXTCLOUD CONFIGURATION
# ===========================================
# STORAGE_PROVIDER=nextcloud
# NEXTCLOUD_SERVER_URL=....
# NEXTCLOUD_USERNAME=...
# NEXTCLOUD_PASSWORD=...
# NEXTCLOUD_WEBDAV_ROOT=..........
# NEXTCLOUD_BASE_FOLDER=......
# NEXTCLOUD_GIF_FOLDER=..

# ===========================================
# OPTIONAL: LOCAL STORAGE PATHS
# ===========================================
UPLOAD_BASE_DIR=./public/upload
FTP_TEMP_DIR=./.tmp/uploads
WATERMARK_FILE_PATH=./public/logowatermark.png

# ===========================================
# OPTIONAL: DATABASE CONFIGURATION
# ===========================================
# Jika menggunakan database (opsional)
# DATABASE_URL=your_database_url_here

# ===========================================
# OPTIONAL: REDIS CONFIGURATION
# ===========================================
# Jika menggunakan Redis untuk caching (opsional)
# REDIS_URL=your_redis_url_here

# ===========================================
# OPTIONAL: LOGGING CONFIGURATION
# ===========================================
# Level logging (debug, info, warn, error)
# LOG_LEVEL=info

# ===========================================
# OPTIONAL: SECURITY CONFIGURATION
# ===========================================
# JWT Secret untuk authentication (jika diperlukan)
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# OPTIONAL: EMAIL CONFIGURATION
# ===========================================
# Jika menggunakan email notification (opsional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password
# FROM_EMAIL=your_email@gmail.com

# ===========================================
# OPTIONAL: CLOUD STORAGE CONFIGURATION
# ===========================================
# Jika menggunakan cloud storage selain FTP (opsional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_s3_bucket_name

# ===========================================
# OPTIONAL: MONITORING CONFIGURATION
# ===========================================
# Jika menggunakan monitoring service (opsional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here
